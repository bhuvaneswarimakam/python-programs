class Solution(object):
    def longestPalindrome(self, s):
        """
        :type s: str
        :rtype: str
        """
        if not s:
            return ""

        start = 0
        max_len = 1

        def expand_around_center(left, right):
            # Helper function to expand around a center
            while left >= 0 and right < len(s) and s[left] == s[right]:
                left -= 1
                right += 1
            return right - left - 1 # Return the length of the palindrome

        for i in range(len(s)):
            # Check for odd length palindromes (centered at i)
            len1 = expand_around_center(i, i)

            # Check for even length palindromes (centered between i and i+1)
            len2 = expand_around_center(i, i + 1)

            # Find the maximum of the two lengths
            current_max_len = max(len1, len2)

            # If we found a new longer palindrome, update the start index and max_len
            if current_max_len > max_len:
                max_len = current_max_len
                # Calculate the new start index
                start = i - (max_len - 1) // 2

        # Return the longest palindromic substring
        return s[start : start + max_len]
