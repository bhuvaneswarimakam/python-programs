class Solution(object):
    def isPalindrome(self, x):
        """
        :type x: int
        :rtype: bool
        """
        # Negative numbers cannot be palindromes (e.g., -121 is not 121-)
        if x < 0:
            return False
        
        # Convert the integer to a string
        s = str(x)
        
        # Compare the string with its reversed version
        return s == s[::-1] 
