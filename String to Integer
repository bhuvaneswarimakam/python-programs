class Solution(object):
    def myAtoi(self, s):
        """
        :type s: str
        :rtype: int
        """
        # 1. Handle leading whitespace
        s = s.lstrip()

        if not s:
            return 0

        # 2. Determine sign
        sign = 1
        i = 0
        if s[0] == '-':
            sign = -1
            i += 1
        elif s[0] == '+':
            i += 1

        # 3. Extract digits and build number
        num = 0
        while i < len(s) and s[i].isdigit():
            digit = int(s[i])
            # Check for potential overflow before adding the digit
            # This is a simplified check; actual overflow handling is more complex
            # and depends on the specific language's integer limits.
            num = num * 10 + digit
            i += 1

        # Apply sign
        num *= sign

        # 4. Clamp to 32-bit signed integer range
        INT_MAX = 2**31 - 1
        INT_MIN = -2**31

        if num > INT_MAX:
            return INT_MAX
        elif num < INT_MIN:
            return INT_MIN
        else:
            return num
