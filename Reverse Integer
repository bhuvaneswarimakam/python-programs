class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """
        # Determine the sign of the number
        sign = -1 if x < 0 else 1
        x = abs(x)  # Work with the absolute value for reversing

        reversed_x = 0
        while x > 0:
            digit = x % 10
            reversed_x = reversed_x * 10 + digit
            x //= 10

        # Check for 32-bit integer overflow
        # The range for a 32-bit signed integer is [-2^31, 2^31 - 1]
        INT_MAX = 2**31 - 1
        INT_MIN = -2**31

        if sign * reversed_x > INT_MAX or sign * reversed_x < INT_MIN:
            return 0  # Return 0 on overflow

        return sign * reversed_x
